 <div class="row sign-up-form">
     <div class="col s6 m6 offset-s4">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <span class="card-title">Name: <%=@student.name %></span>
           <p>Email: <%=@student.email %></p>
           <p>Course Enrollments:
            <% if @student.courses.empty? %>
               None 
            <% else %>
               <% @student.courses.each do |course| %>
                 <%= link_to course.short_name, course_path(course) %> |
               <% end %>
            <% end %>
           </p>
           <!--<a class="waves-effect waves-light btn">-->
           <!--<i class="material-icons right">create</i>Edit</a>-->
        </div>
     </div>
     <% if current_user.id == @student.id %>
      <p><%= link_to '<i class="material-icons right">create</i>Edit Profile'.html_safe, edit_student_path, class: "waves-effect waves-light btn" %></p>
     <% end %>
 </div>

  